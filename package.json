{
    "name": "backend-template",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "dev": "nodemon --exec ts-node -r tsconfig-paths/register index.ts",
        "prod": "npm run build && node -r tsconfig-paths/register dist/index.js",
        "build": "rm -rf dist/ && tsc",
        "test": "ts-node seeders/index.ts && vitest",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "lint": "eslint . --fix",
        "seed": "ts-node seeders/index.ts",
        "db:generate": "drizzle-kit generate --config drizzle.config.local.ts",
        "db:studio": "npx drizzle-kit studio --config drizzle.config.local.ts & firefox https://local.drizzle.studio",
        "db:migrate": "drizzle-kit migrate --config drizzle.config.local.ts",
        "db:push": "drizzle-kit push --config drizzle.config.local.ts",
        "db:prod:generate": "drizzle-kit generate --config drizzle.config.prod.ts",
        "db:prod:migrate": "drizzle-kit migrate --config drizzle.config.prod.ts",
        "db:prod:drop": "drizzle-kit drop --config drizzle.config.prod.ts",
        "db:prod:up": "drizzle-kit up --config drizzle.config.prod.ts"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "type": "commonjs",
    "dependencies": {
        "bcrypt": "^6.0.0",
        "bradb": "^1.3.0",
        "dotenv": "^17.2.1",
        "drizzle-orm": "^0.44.4",
        "express": "^5.1.0",
        "jsonwebtoken": "^9.0.2",
        "pg": "^8.16.3",
        "postgres": "^3.4.7",
        "zod": "^4.0.14"
    },
    "devDependencies": {
        "@types/bcrypt": "^6.0.0",
        "@types/express": "^5.0.3",
        "@types/jsonwebtoken": "^9.0.10",
        "@types/pg": "^8.15.5",
        "drizzle-kit": "^0.31.4",
        "drizzle-seed": "^0.3.1",
        "nodemon": "^3.1.10",
        "prettier": "^3.6.2",
        "supertest": "^7.1.4",
        "ts-node": "^10.9.2",
        "tsconfig-paths": "^4.2.0",
        "vitest": "^3.2.4"
    }
}
